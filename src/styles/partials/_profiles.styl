@import '_utilities';
@import '_theme-vars';

.profiles {
  text-align: center;
  img {
    square($profile-image-height);
    border-radius($profile-image-height / 2);
    border: 6px solid #fff;
    transition: background ease 0.3s;
    background: #fff;
    &:hover{
      background: $color-link-hover;
    }
  }
  ul {
    list-unstyled();
    li {
      display: inline-block;
    }
    a {
      color: #fff;
      &:hover {
        color: $color-link-hover;
      }
    }
    .fa {
      icon-2x();
    }
  }
}